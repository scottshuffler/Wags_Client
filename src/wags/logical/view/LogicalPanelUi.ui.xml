<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:us='urn:import:wags.magnet.view'
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
	xmlns:new="urn:import:org.gwtbootstrap3.client.ui">
	<ui:style>
	
	.allButtonPanel {
		/*background-color: #1abc9c;*/
		background-color: #3c9;
		height: 40px;	
	}

	.base {
		border: 3px solid #325c74;
		background-color: #fff;
		margin-left: auto;
		margin-right: auto;
	}

	.buttonPanelLeft {
		margin-right: 5%;
		display: inline;
	}

	.buttonPanelRight {
		margin-left: 5%;
		display: inline;
	}

	.column {
		border: 1px solid #000;
		height: 50px;
		width: 50px;
	}
	
	.dequeueDrop {
		height: 100px;
		margin-top: -75px;
	}

	.directionsContent {
		margin-bottom: 1%;
	}

	.directionsPanel {
		-moz-border-radius: 5px;
		border-radius: 5px;
		font-family: "arial";
		background: #E6E6E6;
		padding-top: 1%;
		padding-right: 1%;
		padding-left: 1%;
		margin-top: 10px;
		margin-bottom: 10px;
		margin-right: auto;
		margin-left: auto;
		border: 1px solid AliceBlue;
		height: 95%;
		width: 95%;
		overflow: scroll;

	}

	.drag_panel {
		background: #D3D3D3;
  		opacity: .5;
  		min-height: 600px;
  		min-width: 600px;
  		width: 80%;
  		margin-left: 20%;
  		margin-right: 20%;
  		height: 100%;
  		margin-top: 1%;
	}

	.lgButton {
		margin-right: 1%;
		margin-left: 1%;
		margin-top: .7%;
		padding-top: 2px;
		width: 15%;
	}

	.message {
		background-color: #fff;
		border: 1px solid #fff;
		border-radius: 20px;
		font-size: 1.3em;
		height: 1.3vw;
		margin-left: auto;
		margin-right: auto;
		margin-top: 1%;
		padding: 2%;
		text-align: center;
		width: 80%;
	}
	
	.radixContain {
		height: 100%;
		margin-top: 75px;
		min-width: 600px;
		min-height: 600px;
		padding-right: 0;
		padding-left: 0;
		width: 100%;
	}

	.rowContain {
		margin-top: 200px;
		padding-right: 0;
		padding-left: 0;
	}

	.smButton {
		margin-right: 1%;
		margin-left: 1%;
		margin-top: .7%;
		padding-top: 2px;
		width: 10%;
	}

	</ui:style>

	<b:Column size="12" styleName='{style.base}'>
	    <g:FlowPanel ui:field='layoutPanel' styleName='{style.base}'>
	    <b:FluidRow>
	    	<g:ScrollPanel styleName="{style.directionsPanel}">
	       		<g:AbsolutePanel styleName="{style.directionsContent}">
	       		    <new:Heading size="H4" ui:field="title" />
	       		    <b:Paragraph ui:field="instructions" />
	       			<new:Heading size="H4" ui:field="radixCounter" visible="false" />
	       		</g:AbsolutePanel>
	    	</g:ScrollPanel>
		</b:FluidRow>	
		<b:FluidRow styleName="{style.allButtonPanel}">
	    	<b:FluidRow styleName="{style.buttonPanelLeft}">
	        	<g:Button ui:field="backButton" styleName="{style.smButton}" height="28px">Back</g:Button>
	        	<g:Button ui:field="resetButton" styleName="{style.smButton}" height="28px">Reset</g:Button>
	    	</b:FluidRow>
	    	<b:FluidRow styleName="{style.buttonPanelRight}">
	      		<g:Button ui:field="addButton" styleName="{style.smButton}" height="28px">Add Edge</g:Button>
	      		<g:Button ui:field="removeButton" styleName="{style.smButton}" height="28px">Remove Edge</g:Button>
	      		<g:Button ui:field="swapButton" styleName="{style.smButton}" height="28px">Swap Nodes</g:Button>
	       		<g:Button ui:field="evaluateButton" styleName="{style.lgButton}" height="28px">Evaluate</g:Button>
	   		</b:FluidRow>
	    </b:FluidRow>
	    <b:FluidRow>
			<b:Paragraph ui:field="message" styleName="{style.message}" />
	    </b:FluidRow>
	    <g:AbsolutePanel ui:field="boundaryPanel"></g:AbsolutePanel>
    		<new:Container styleName="{style.radixContain}" ui:field="radixContain" fluid="true" visible="false">
    			<g:AbsolutePanel styleName="{style.dequeueDrop}" ui:field="dequeueDrop"></g:AbsolutePanel>
    			<g:AbsolutePanel ui:field="radixDrop"></g:AbsolutePanel>
    		</new:Container>
    		<new:Container styleName="{style.rowContain}" ui:field="hashingBoxes" fluid="true" visible="false"></new:Container>
    </g:FlowPanel>
       </b:Column>
</ui:UiBinder> 

